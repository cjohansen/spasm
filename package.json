{
  "name": "spa-sm",
  "version": "1.5.0",
  "description": "Single Page Application State Manager - 'A bit too much structure' for single page web apps",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "nodemon demo/index.js",
    "test": "mocha -R progress --require babel-register --recursive test",
    "prebuild": "mkdir -p dist",
    "build": "browserify -s spasm -o dist/spasm.js index.js",
    "postbuild": "uglifyjs -o dist/spasm.js dist/spasm.js",
    "prepublish": "npm run build",
    "autotest": "npm run test -- --watch"
  },
  "keywords": [
    "react",
    "spa",
    "data flow"
  ],
  "author": "Christian Johansen",
  "license": "ISC",
  "dependencies": {
    "js-atom": "^0.4.0",
    "uglifyify": "^3.0.4"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "babel-polyfill": "^6.16.0",
    "babel-register": "^6.16.3",
    "browserify": "^13.1.1",
    "browserify-derequire": "^0.9.4",
    "browserify-middleware": "^7.1.0",
    "express": "^4.14.0",
    "formatio": "^1.2.0",
    "mocha": "^3.1.2",
    "nodemon": "^1.11.0",
    "react": "^0.13.3",
    "referee": "^1.2.0",
    "referee-sinon": "^1.0.3",
    "sinon": "^1.17.6",
    "uglify-js": "^2.7.3"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ],
      "uglifyify"
    ],
    "plugin": [
      "browserify-derequire"
    ]
  }
}
