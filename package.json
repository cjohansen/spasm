{
  "name": "spa-sm",
  "version": "0.24.0",
  "description": "Single Page Application State Manager - 'Just enough structure' for single page web apps",
  "main": "src/spasm.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "nodemon demo/index.js",
    "build": "browserify -s spasm -o spasm.js src/spasm.js",
    "postbuild": "uglify -s spasm.js -o spasm.js",
    "prepublish": "npm run build",
    "test": "mocha -R progress --require babel-register --recursive test",
    "autotest": "npm run test -- --watch"
  },
  "keywords": [
    "react",
    "spa",
    "data flow"
  ],
  "author": "Christian Johansen",
  "license": "ISC",
  "dependencies": {
    "babel-preset-es2015": "^6.0.15",
    "babelify": "^7.2.0",
    "js-atom": "^0.4.0",
    "react": "~0.13.3",
    "uglifyify": "^3.0.1"
  },
  "devDependencies": {
    "babel-polyfill": "^6.1.19",
    "babel-register": "^6.4.3",
    "browserify": "^11.1.0",
    "browserify-derequire": "^0.9.4",
    "browserify-middleware": "~7.0.0",
    "express": "~4.13.3",
    "formatio": "^1.1.2",
    "jasmine-core": "^2.3.4",
    "mocha": "^2.3.4",
    "nodemon": "~1.4.1",
    "referee": "^1.1.1",
    "referee-sinon": "^1.0.2",
    "sinon": "^1.17.0",
    "uglify": "~0.1.5"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ],
      "uglifyify"
    ],
    "plugin": [
      "browserify-derequire"
    ]
  }
}
